{
  "name": "gitscript",
  "version": "0.1.0",
  "description": "A Git-like version control system library for JavaScript/TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "ci": "npm run type-check && npm run lint && npm run format:check && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "git",
    "version-control",
    "history",
    "typescript",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=20.19.0"
  }
}
